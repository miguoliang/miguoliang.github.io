---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frank's Observation" description="Put on the common sense hat.">
	<section class="hero">
		<h1>Frank's Observation</h1>
		<p class="subtitle">Put on the common sense hat.</p>
	</section>
</Layout>

<style>
	.hero {
		min-height: calc(100vh - 200px);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		gap: 1rem;
	}
	
	h1 {
		font-size: clamp(2.5rem, 8vw, 4rem);
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.2em;
	}
	
	.subtitle {
		margin: 0;
		font-size: 1.1rem;
		letter-spacing: 0.15em;
		text-transform: uppercase;
		color: #6f6f6f;
	}
</style>
